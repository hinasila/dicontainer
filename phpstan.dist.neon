includes:
    - phar://phpstan.phar/conf/bleedingEdge.neon
    - phpstan-baseline.neon


parameters:
    level: 6
    paths:
        - src
        - tests/Features

    bootstrapFiles:
        - tests/bootstrap.php

    scanDirectories:
        - tests/Fixtures

    ignoreErrors:

    # Miscellaneous parameters
    inferPrivatePropertyTypeFromConstructor: true
